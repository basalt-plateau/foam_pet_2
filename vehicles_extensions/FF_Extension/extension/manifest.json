{
	"manifest_version": 2,
	"name": "Foam Pet FF Extension",
	"description": "Foam Pet FF Extension",
	"version": "1.0",
	"incognito": "spanning",
	"permissions": [
		"activeTab",
		"cookies",
		"storage",
		"tabs"
	],
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
